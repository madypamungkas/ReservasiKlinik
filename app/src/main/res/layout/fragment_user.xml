<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.UserFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutSearcn"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@color/colorPrimaryDark" />

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp">

                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/maven_pro_regular"
                    android:text="User"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone" />


            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/profileLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_person_black_24dp"
                            app:civ_border_color="@color/dark_slate_gray"
                            app:civ_border_width="@dimen/_1sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Ubah Profil Foto"
                            android:textAlignment="center"
                            android:textColor="@color/dark_slate_gray"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/btnProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@color/white"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/_8sdp">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:layout_marginStart="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_9sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Pengaturan Akun"
                                    android:textColor="@color/dark_slate_gray"
                                    android:textSize="@dimen/_12ssp" />

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ic_next" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:background="@color/light_grey" />

                            <LinearLayout
                                android:id="@+id/btnChangePass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/_8sdp">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:layout_marginStart="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_9sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Ubah Password"
                                    android:textColor="@color/dark_slate_gray"
                                    android:textSize="@dimen/_12ssp" />

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ic_next" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:background="@color/light_grey" />

                            <LinearLayout
                                android:id="@+id/btnTermCondition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/_8sdp">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:layout_marginStart="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_9sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Terms Condition"
                                    android:textColor="@color/dark_slate_gray"
                                    android:textSize="@dimen/_13ssp" />

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ic_next" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:background="@color/light_grey" />

                            <LinearLayout
                                android:id="@+id/btnAboutUs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/_8sdp">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:layout_marginStart="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_9sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Tentang Kami"
                                    android:textColor="@color/dark_slate_gray"
                                    android:textSize="@dimen/_13ssp" />

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:src="@drawable/ic_next" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:background="@color/light_grey" />

                            <LinearLayout
                                android:id="@+id/btnVersion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/_8sdp">

                                <ImageView
                                    android:layout_width="@dimen/_33sdp"
                                    android:layout_height="@dimen/_33sdp"
                                    android:layout_marginStart="@dimen/_10sdp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_9sdp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Versi Aplikasi"
                                    android:textColor="@color/dark_slate_gray"
                                    android:textSize="@dimen/_12ssp" />

                                <TextView
                                    android:id="@+id/txtVersion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_9sdp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="1.0"
                                    android:textColor="@color/dark_slate_gray"
                                    android:textSize="@dimen/_12ssp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:background="@color/light_grey" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <Button
                        android:id="@+id/btnLogout"
                        style="@style/loginButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:fontFamily="@font/maven_pro_regular"
                        android:paddingLeft="@dimen/_25sdp"
                        android:paddingRight="@dimen/_25sdp"
                        android:text="LogOut" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>