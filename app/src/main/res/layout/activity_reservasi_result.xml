<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:orientation="vertical"
    tools:context=".ReservasiResultActivity">

    <include layout="@layout/toolbar_result" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lazismu_ic_berhasil"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_weight="4"
                android:fontFamily="@font/maven_pro_bold"
                android:text="Reservasi Berhasil"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="4"
                android:fontFamily="@font/maven_pro_regular"
                android:text="Data Reservasi Anda Berhasi Ditambahkan"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />
            <ImageView
                android:id="@+id/qrImage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/qrcode"
                android:visibility="visible" />

            <TextView
                android:id="@+id/idReservasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_weight="4"
                android:fontFamily="@font/maven_pro_regular"
                android:text="ID Reservasi 6019892881"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/acountInfo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85sdp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:fontFamily="@font/maven_pro_regular"
                                android:text=" Tanggal : 2020-04-10"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold">

                            </TextView>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:fontFamily="@font/maven_pro_regular"
                                android:text="Jam dan Sesi"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"/>


                        </LinearLayout>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85sdp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_8sdp"

                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_gravity="start"
                                android:id="@+id/txtAct"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:fontFamily="@font/maven_pro_regular"
                                android:text="Screening Score Anda 15"
                                android:textColor="@color/black"
                                android:textAlignment="textStart"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txtInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:fontFamily="@font/maven_pro_regular"
                                android:text="Anda memiliki gejala terinfeksi COVID-19"
                                android:textAlignment="viewEnd"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>




        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/_20sdp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:padding="@dimen/_7sdp"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/roboto_bold"
                android:text="Simpan QR"
                android:onClick="simpan"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"/>
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
